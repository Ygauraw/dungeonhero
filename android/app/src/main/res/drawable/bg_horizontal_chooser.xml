<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/main_color" />

            <corners android:radius="4dp" />

            <solid android:color="@color/bg_btn_edge_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0dp" android:color="@color/bg_btn_pressed_center" />

            <corners android:radius="4dp" />

            <solid android:color="@color/bg_btn_edge" />
        </shape>
    </item>

</selector>