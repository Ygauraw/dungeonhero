<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.andengine.opengl.view.RenderSurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.glevel.dungeonhero.views.CustomTextView
        android:id="@+id/bigLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/deployment_phase"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <include
            android:id="@+id/activeCharacter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/in_game_active_hero" />

        <include
            android:id="@+id/selectedElement"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/in_game_selected_element" />
    </RelativeLayout>

</RelativeLayout>
