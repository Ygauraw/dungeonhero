<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/storms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_village"
        android:tint="#cc000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.glevel.dungeonhero.views.CustomButton
                    android:id="@+id/shop_button"
                    style="@style/Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop"
                    android:padding="12dp"
                    android:drawablePadding="10dp"
                    android:textSize="22sp"
                    android:drawableLeft="@drawable/ic_coin"
                    android:layout_marginLeft="8dp" />

                <com.glevel.dungeonhero.views.CustomButton
                    android:id="@+id/tavern_button"
                    style="@style/Button"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tavern"
                    android:padding="12dp"
                    android:drawablePadding="10dp"
                    android:textSize="22sp"
                    android:drawableLeft="@drawable/ic_door"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <com.glevel.dungeonhero.views.CustomCarousel
                android:id="@+id/books"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                custom:nbColumns="2" />
        </LinearLayout>

        <com.glevel.dungeonhero.views.CustomTextView
            android:id="@+id/chooseBookMessage"
            style="@style/AnimatedMessage"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_book_message" />
    </RelativeLayout>
</FrameLayout>