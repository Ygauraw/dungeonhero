<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_game_menu"
    android:gravity="center"
    android:orientation="vertical" >

    <com.glevel.dungeonhero.views.CustomTextView
        style="@style/SplashScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/game_paused" />

    <com.glevel.dungeonhero.views.CustomButton
        android:id="@+id/resumeGameButton"
        style="@style/HomeScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/resume_game" />

    <com.glevel.dungeonhero.views.CustomButton
        android:id="@+id/surrenderButton"
        style="@style/HomeScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/surrender" />

    <com.glevel.dungeonhero.views.CustomButton
        android:id="@+id/exitButton"
        style="@style/HomeScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/save_exit" />

</LinearLayout>